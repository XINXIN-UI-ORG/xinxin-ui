.x-top
    position fixed
    z-index 10000
    cursor pointer
    transition bottom .5s
    .default
        height 40px
        width 40px
        border-radius 6px
        background-color #fff
        display flex
        justify-content center
        align-items center
        box-shadow $box-shadow
        .icon-top
            width 22px
            height 22px
