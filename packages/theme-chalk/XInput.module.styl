.x-input
    display inline-block
    box-sizing border-box
    border 1px solid transparent
    border-radius 3px
    padding 0 12px
    cursor text
    position relative
    &:hover
        .x-input__border
            border-color #f5a31f    
    .x-input__border
        border 1px solid #e0e0e6
        transition border-color .3s, box-shadow .3s
        position absolute
        border-radius 3px
        top 0
        left 0
        bottom 0
        right 0
        z-index -1
    .x-input__input
        height calc(100% - 2px)
        margin-top 1px
        padding 0
        border none
        outline none
        caret-color #f5a31f
        &:focus
            ~ .x-input__border
                border-color #f5a31f
                box-shadow 0 0 1px 2px rgba(245, 163, 31, .25)
.x-input-small
    height 30px
.x-input-normal
    height 34px
.x-input-large
    height 38px
