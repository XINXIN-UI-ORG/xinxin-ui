@import '../../../theme-chalk/variable.styl';

.x-month-selector
  width 300px
  .x-month-selector__operation-bar
    height 28px
    display flex
    align-items center
    justify-content center
    padding 5px 10px
    border-bottom 1px solid #efeff5
  .x-month-selector__month-selector
    margin 0 16px
    display grid
    grid-template-columns repeat(3, 87px)
    grid-template-rows repeat(4, 55px)
    justify-items center
    align-items center
    .x-month-selector__wrap
      .x-month-selector__wrap__text
        padding 3px 10px
        border-radius 22px
        cursor pointer
        position relative
        &:hover
          background-color #f3f3f5
          color $base_theme_color
        &.x-month-selector__wrap__text-current
          color $base_theme_color
        &.x-month-selector__wrap__text-select
          color #fff
          background-color $base_theme_color
        .x-month-selector__current
          display block
          width 5px
          height 5px
          position absolute
          left calc(50% - 2.5px)
          bottom -7px
          background-color $base_theme_color
          border-radius 50%
