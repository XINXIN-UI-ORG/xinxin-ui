@import '../../../theme-chalk/variable.styl';

.x-date-picker
  .x-date-picker__content
    display inline-flex
    align-items center
    background-color #f2f3f5
    height 32px
    border-radius 2px
    padding 5px 10px
    box-sizing border-box
    border 1px solid transparent
    overflow hidden
    &:hover
      background-color #e5e6eb
    &.x-date-picker-focus
      border-color $base_theme_color
      background-color #fff
    .x-date-picker__content__icon
      width 20px
      height 20px
      color #909399
    .x-date-picker__content__input
      background-color transparent
      color #606266
      border none
      outline none
      margin-right 10px
      height 100%
.x-date-picker__operation-bar
  display flex
  height 28px
  margin 5px 10px
  align-items center
  justify-content space-between
  width 300px
  .x-date-picker__operation-icon
    flex 0 0 25px
    display flex
    align-items center
    justify-content center
    cursor pointer
    svg
      width 16px
      height 16px
      color #c2c2c2
      &:hover
        color $base_theme_color
  .x-date-picker__display
    flex 1
    display flex
    justify-content center
    .x-date-picker__display__year
      margin-right 5px
    & > span
      cursor pointer
      font-size 14px
      &:hover
        color $base_theme_color