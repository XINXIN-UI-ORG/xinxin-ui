@import '../../../theme-chalk/variable.styl';

.x-date-panel__operation-bar
  display flex
  height 28px
  margin 5px 10px
  align-items center
  justify-content space-between
  .x-date-panel__operation-icon
    flex 0 0 25px
    height 25px
    display flex
    align-items center
    justify-content center
    cursor pointer
    border-radius 50%
    &:hover
      background-color #e5e6eb
      svg
        color $base_theme_color
    svg
      width 16px
      height 16px
      color #c2c2c2
  .x-date-panel__display
    flex 1
    display flex
    justify-content center
    & > span
      cursor pointer
      font-size 14px
      height 25px
      line-height 26px
      padding 0 3px
      border-radius 3px
      &:hover
        color $base_theme_color
        background-color #e5e6eb