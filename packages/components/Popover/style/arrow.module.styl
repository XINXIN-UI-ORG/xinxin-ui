.x-popover__arrow
    width 10px
    height 10px
    .x-popover__arrow__triangle
        transform rotate(45deg)
        height 10px
        width 10px
        border 1px solid #e4e7ed
        border-radius 2px
        box-sizing border-box
        background-color #fff
        &.x-popover__arrow__triangle-right
            border-right-color transparent
            border-top-color transparent
        &.x-popover__arrow__triangle-top
            border-top-color transparent
            border-left-color transparent
        &.x-popover__arrow__triangle-left
            border-left-color transparent
            border-bottom-color transparent
        &.x-popover__arrow__triangle-bottom
            border-bottom-color transparent
            border-right-color transparent