.x-popover
    padding 6px 15px
    border-radius 4px
    box-sizing border-box
    z-index 100
    .x-popover__title
        font-size 18px
        margin 6px 0 12px 0
        line-height 1
    .x-popover__arrow
        width 8px
        height 8px
        position absolute
    .x-popover__arrow::before
        content ''
        display block
        transform rotate(45deg)
        height 8px
        width 8px
    &.x-popover-light
        border 1px solid #e4e7ed
        background-color #fff
        box-shadow 0 0 12px rgba(0, 0, 0, .12)
        color #000
        .x-popover__arrow::before
            border 1px solid #e4e7ed
            background-color #fff
    &.x-popover-dark
        background-color rgba(38, 38, 38, 1)
        color #fff
        .x-popover__arrow::before
            background-color rgba(38, 38, 38, 1)
    &::after
        content ''
        display block
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        z-index -1
    &[data-popper-placement^='right']
        margin-left var(--margin) !important
        &::after
            left var(--position) !important
        .x-popover__arrow
            left -5px
            &::before
                border-right-color transparent
                border-top-color transparent
    &[data-popper-placement^='top']
        margin-bottom var(--margin) !important
        &::after
            bottom var(--position) !important
        .x-popover__arrow
            bottom -4px
            &::before
                border-top-color transparent
                border-left-color transparent
    &[data-popper-placement^='left']
        margin-right var(--margin) !important
        &::after
            right var(--position) !important
        .x-popover__arrow
            right -4px
            &::before
                border-left-color transparent
                border-bottom-color transparent
    &[data-popper-placement^='bottom']
        margin-top var(--margin) !important
        &::after
            top var(--position) !important
        .x-popover__arrow
            top -4px
            &::before
                border-bottom-color transparent
                border-right-color transparent
    &[data-popper-reference-hidden]
        visibility: hidden;
        pointer-events: none;
.x-popover-transition-enter-active, .x-popover-transition-leave-active
    transition opacity .5s
.x-popover-transition-enter-from, .x-popover-transition-leave-to
    opacity 0
.x-popover-transition-enter-to, .x-popover-transition-leave-from
    opacity 1
