@import '../../../theme-chalk/variable.styl';

.x-input
    display flex
    flex-wrap nowrap
    border 1px solid #e0e0e6
    transition border-color .3s, box-shadow .3s
    overflow hidden
    border-radius 3px
    padding 0 12px
    cursor text
    position relative
    z-index 1
    background-color #fff
    vertical-align middle
    &:hover
        border-color $base_theme_color
    &.x-input-focus
        border-color $base_theme_color
        box-shadow $base_theme_shadow
    .x-input__left
        flex 1
        overflow hidden
        word-break break-all
        word-wrap break-word
        display flex
        flex-wrap wrap
        .x-input__prefix
            padding-right 12px
        .x-input__input
            flex 1
            min-width 0
            padding 0
            border none
            outline none
            background-color transparent
            caret-color #f5a31f
            &::-webkit-inner-spin-button, &::-webkit-outer-spin-button
                -webkit-appearance none
            &[type="number"]
                -moz-appearance textfield
            &::placeholder
                color #c2c2c2
    .x-input__suffix
        padding-left 12px
    .x-input__area
        width 16px
        flex 0 0 16px
        padding-left 6px
        position relative
        span
            position absolute
            top 50%
            transform translateY(-50%)
            cursor pointer
            .x-input__area-icon
                color #727577
                vertical-align -14%
                &:hover
                    color #f5a31f
                &:active
                    color #f19809
    .x-input__fix
        color #333639
        display flex
        align-items center
        flex-wrap wrap
.x-input-small
    .x-input__input
        height 28px !important
.x-input-normal
    .x-input__input
        height 32px !important
.x-input-large
    .x-input__input
        height 36px !important
.x-input-disabled
    background-color #f7f7f7
    cursor not-allowed !important
    &:hover
        border-color #e0e0e6
    .x-input__input
        cursor not-allowed !important
.x-input-error
    border-color #F56C6C
    .x-input__input
        caret-color #F56C6C
    &.x-input-focus
        border-color #F56C6C
        box-shadow 0 0 1px 2px rgba(245, 108, 108, .25)
    &:hover
        border-color #F56C6C
.x-input-cursor
    cursor pointer
    .x-input__input
        cursor pointer