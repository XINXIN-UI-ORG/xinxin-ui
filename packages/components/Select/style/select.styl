@import '../../../theme-chalk/variable.styl';

.x-select
    .x-select__input
        cursor pointer
        :deep(.x-input__prefix)
            padding 0
        .x-select__input__icon, .x-select__input__clear
            transition transform .5s
            color #b3b6bc
            width 14px
            height 14px
        .x-select__input__icon-open
            transform rotate(180deg)
        .x-select__input__clear
            &:hover
                color $base_theme_color
        .x-select__input__tag-list
            padding-right 12px
            overflow hidden
            :deep(.x-tag)
                margin 1.5px 3px 1.5px 0
.x-select-block
    display block
.x-select-disabled
    cursor not-allowed