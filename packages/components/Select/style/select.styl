@import '../../../theme-chalk/variable.styl';

.x-select
    display inline-block
    .x-select__input
        cursor pointer
        .x-select__input__icon
            transition all .5s
            color #b3b6bc
            width 14px
            height 14px
        .x-select__input__icon-open
            transform rotate(180deg)
.x-select-block
    display block
.x-select-disabled
    cursor not-allowed

.x-select__options
    padding 6px 0
    .x-select__options__item
        padding 8px 12px
        cursor pointer
        display flex
        align-items center
        &:hover
            background-color #f4f5f5
            .x-select__options__item__select
                svg
                    color #f4f5f5
        .x-select__options__item__select
            margin-right 5px
            svg
                height 18px
                vertical-align sub
                color #fff
    .x-select__options__item-selected
        background-color #f4f5f5
        .x-select__options__item__select
            svg
                color $base_theme_color !important
        .x-select__options__item__label
            font-weight bolder
            color $base_theme_color
    .x-select__options__item-disabled
        cursor not-allowed
        color #c8c8c8