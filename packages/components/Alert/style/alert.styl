.x-alert
  position fixed
  inset 0
  background-color rgba(0, 0, 0, .3)
  z-index 10000
  .x-alert__box
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    display flex
    .x-alert__box__flag
      width 3px
    .x-alert__box__content
      background-color rgba(0, 0, 0, .3)
      padding 10px 5px
      margin 0 3px
      font-weight bolder
      font-size 30px
      display flex
      line-height 1
      align-items flex-end
      .icon
        width 60px
        height 60px
      .text
        line-height 1
        display flex
        flex-direction column
        align-items center
        .text-content
          letter-spacing 2px
        .tips
          font-size 24px
          letter-spacing 5px
          margin-top 5px

.x-alert-error
  background-color rgba(255, 102, 115, .3)
  .x-alert__box
    color #ff6673
    .x-alert__box__flag
      background-color #ff6673

.x-alert-warning
  background-color rgba(255, 125, 0, .3)
  .x-alert__box
    color #ff7d00
    .x-alert__box__flag
      background-color #ff7d00
    
    